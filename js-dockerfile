# -------------------------------
# STAGE 1 — Build / Install
# -------------------------------
FROM node:18 AS builder

# Set working directory
WORKDIR /app

# Copy package files first to leverage Docker cache
COPY package*.json ./

# Install all dependencies (dev + prod) reproducibly
RUN npm ci

# Copy app source
COPY . .

# If you have a build step (React, TypeScript, etc.), run it automatically *only if* package.json has a build script.
# This avoids failing when there's no build script.
RUN if grep -q "\"build\"" package.json; then npm run build; fi

# Remove devDependencies so node_modules only contains production deps (keeps final image small)
RUN npm prune --production


# -------------------------------
# STAGE 2 — Production Runtime
# -------------------------------
FROM node:18-slim

WORKDIR /app

# Set production environment
ENV NODE_ENV=production
# Copy production node_modules and the app files
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app ./

# Expose application port (change if your app uses a different port)
EXPOSE 3000

# Start the Node.js application. Ensure server.js exists or change to the correct entry point.
CMD ["node", "server.js"]
